<Page x:Class="OxfamSurveys.MenuWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OxfamSurveys"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="MenuWindow">
    <Page.DataContext>
        <Binding Path="MenuViewModel" Source="{StaticResource Locator}" />
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" FontWeight="Bold">Analytics</Label>
        <Image Grid.Column="0" Grid.Row="0" Source="Images/statistics.png" Margin="0,10,0,0" Width="100" Height="100"></Image>
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0">
            <StackPanel Orientation="Vertical">
                <Label VerticalAlignment="Center" Content="Formular: "/>
                <ComboBox ItemsSource="{Binding Forms}" SelectedItem="{Binding SelectedForm}" DisplayMemberPath="Title" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label VerticalAlignment="Center" Content="Begin date: "/>
                <DatePicker Margin="0,0,0,103" SelectedDate="{Binding BeginDate}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="0">
                <Label VerticalAlignment="Center" Content="End date:"/>
                <DatePicker Margin="0,0,0,103" SelectedDate="{Binding EndDate}"/>
            </StackPanel>
            <Button VerticalAlignment="Top" Margin="0,27,0,0" Height="20" Content="Download Nutval"  Command="{Binding DownloadNutValCommand}"/>
        </StackPanel>

        <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" FontWeight="Bold">Edit forms</Label>
        <Image Margin="20,10,0,0" Grid.Column="0" Grid.Row="1"  Source="Images/form.png" Width="90" Height="90"></Image>
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1">
            <StackPanel Orientation="Vertical"  >
                <Label VerticalAlignment="Center" FontWeight="Bold" Content="Create new Nutval:"></Label>
                <StackPanel Orientation="Vertical">
                    <Label>Form name:</Label>
                    <TextBox Width="174" Text="{Binding FormsName}"/>
                </StackPanel>
                <Button Margin="20" Height="20" Grid.Column="1" Grid.Row="1"  Content="Create!" Command="{Binding CreateCommand}"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
