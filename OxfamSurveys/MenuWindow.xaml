<Page x:Class="OxfamSurveys.MenuWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OxfamSurveys"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="MenuWindow">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center">Analytics</Label>
        <Image Grid.Column="0" Grid.Row="0" Source="Images/statistics.png" Width="100" Height="100"></Image>
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0">
            <StackPanel Orientation="Vertical"  >
                <Label VerticalAlignment="Center" Content="Update Nutval file with new uploaded forms: "></Label>
                <Button Margin="20" Height="20" Grid.Column="1" Grid.Row="0"  Content="Update!"></Button>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="0">
                <Label VerticalAlignment="Center" Content="See Nutval file"></Label>
                <Button Margin="20" Height="20" Grid.Column="1" Grid.Row="0"  Content="See!"></Button>
            </StackPanel>
        </StackPanel>

        <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center">Edit forms</Label>
        <Image Margin="20,0,0,0" Grid.Column="0" Grid.Row="1"  Source="Images/form.png" Width="90" Height="90"></Image>
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1">
            <StackPanel Orientation="Vertical"  >
                <Label VerticalAlignment="Center" Content="Create new "></Label>
                <Button Margin="20" Height="20" Grid.Column="1" Grid.Row="1"  Content="Update!"></Button>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="0">
                <Label VerticalAlignment="Center" Content="See Nutval file"></Label>
                <Button Margin="20" Height="20" Grid.Column="1" Grid.Row="1"  Content="See!"></Button>
            </StackPanel>
        </StackPanel>



    </Grid>
</Page>
