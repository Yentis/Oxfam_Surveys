<Page x:Class="OxfamSurveys.Connection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OxfamSurveys"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <Page.DataContext>
        <Binding Path="ConnectionViewModel" Source="{StaticResource Locator}" />
    </Page.DataContext>
    <Grid>
        <Label Content="Add Account" FontSize="20" HorizontalContentAlignment="Center" Margin="220,34,220,329" Height="37"/>
        <TextBlock Margin="175,102,175,262" TextWrapping="Wrap" Text="Please enter your login and password to connect to your KoBoCollect account."/>
        <TextBox Text="{Binding Login}" Height="23" Margin="215,156,215,222" TextWrapping="Wrap"/>
        <TextBox Text="{Binding Password}" Height="23" Margin="215,195,215,182" TextWrapping="Wrap"/>
        <TextBox Text="{Binding URL}" Height="23" Margin="215,236,215,141" TextWrapping="Wrap"/>
        <Button Content="Add" Margin="270,282,270,93" Command='{Binding ConnectCommand}'/>
    </Grid>
</Page>
